{
    "sites":
    [
        {
            "pattern": "^https?://(.*[.])?dev[.]to",
            "immediate": ".comments-container-container, .comments-count"
        },
        {
            "pattern": "^https?://(.*[.])?youtube[.]com",
            "immediate": "ytd-comments, ytd-live-chat-frame, .yt-spinner, #watch-discussion, #watch-sidebar-live-chat, #comments-test-iframe",
            "delay": "ytd-comments"
        },
        {
            "pattern": "^https?://(.*[.])?reddit[.]com",
            "immediate": ".commentarea, .comments"
        },
        {
            "pattern": "^https?://(.*[.])?twitter[.]com",
            "immediate": ".inline-reply-tweetbox, .replies-to, .ProfileTweet-action--reply, .Icon--reply",
            "delay": ".ProfileTweet-action--reply"
        },
        {
            "pattern": "^https?://(.*[.])?facebook[.]com",
            "immediate": ".comment_link, .UFIComment, .UFIAddComment, ._-56, .UFILikeSentence ._ohf, .UFIReplyList, .UFIPagerLink, .UFIPagerCount",
            "delay": ".comment_link, .UFIComment, .UFIAddComment, ._-56, .UFILikeSentence ._ohf, .UFIReplyList, .UFIPagerLink, .UFIPagerCount",
            "onceOnly": false
        },
        {
            "pattern": "^https?://(.*[.])?ijr[.]com",
            "immediate": ".opt360-discuss-cta-top-comments, .opt360-share-button-comments-article-start, div.mt1 > a > div"
        },
        {
            "pattern": "^https?://(.*[.])?techdirt[.]com",
            "immediate": ".storylinks, .comments"
        },
        {
            "pattern": "^https?://(.*[.])?stackoverflow[.]blog",
            "immediate": ".comments-wrapper"
        },
        {
            "pattern": "^https?://(.*[.])?stackexchange[.]com",
            "immediate": ".comments, .comments-link, .js-link-separator"
        },
        {
            "pattern": "^https?://(.*[.])?stackoverflow[.]com",
            "immediate": ".comments, .comments-link, .js-link-separator"
        },
        {
            "pattern": "^https?://(.*[.])?collider[.]com",
            "immediate": ".facebook-comments-cover"
        },
        {
            "pattern": "^https?://(.*[.])?github[.]com",
            "immediate": "div.discussion-timeline div.timeline-comment-wrapper:nth-child(1n+2), div.discussion-timeline-actions > div.timeline-new-comment"
        },
        {
            "pattern": "^https?://(.*[.])?pivotaltracker[.]com",
            "immediate": ".activity"
        },
        {
            "pattern": "^https?://(.*[.])?boredpanda[.]com",
            "immediate": ".open-list-comments"
        },
        {
            "pattern": "^https?://(.*[.])?freecodecamp[.]org",
            "immediate": ".topic-post:not(.topic-owner), div.post-stream > .topic-owner:nth-child(1n+2), .cloaked-post",
            "delay": ".topic-post:not(.topic-owner), div.post-stream > .topic-owner:nth-child(1n+2), .cloaked-post",
            "onceOnly": false
        },
        {
            "pattern": "^https?://",
            "immediate": ".fb-comments, .o2-display-comments-toggle, .o2-post-comments, .o2-post-comment-controls, #disqus_thread, .commentlist, .comments, .comment, .respond, #comments, #comment, #respond",
            "delay": "#disqus_thread > iframe, .responsesStreamWrapper"
        }
    ]
}
